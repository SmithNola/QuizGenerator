<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.quizgen.controller.CreateViewController"
      prefHeight="400.0" prefWidth="600.0"
      stylesheets="@../stylesheet/createviewsheet.css">
    <children>
        <HBox fx:id="top">
            <children>
                <Label fx:id="name" text="Name" />
                <Label fx:id="genre" text="Genre" />
                <Label fx:id="creator" text="Creator" />
                <Label fx:id="date" text="Date Created" />
            </children>
        </HBox>
        <HBox fx:id="bottom">
            <children>
                <Button text="QuizInfo" onAction="#switchToQuizInfo"/>
            </children>
        </HBox>
        <HBox>
            <children>
                <Button text="Create" onAction="#switchToQuizSettings"/>
            </children>
        </HBox>
    </children>
</VBox>
